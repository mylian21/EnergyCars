                                {{#each marca_modeloAgregar}}
                                <option value="{{MARC_NOMBRE}}">{{MARC_NOMBRE}}</option>
                                {{/each}}
                            </select>
                        </div>                            
                        <div class="form-group my-3">
                            <label for="veh_modelo" class="form-label">Modelo:</label>
                            <select id="veh_modelo" class="form-control" name="veh_modelo">
                                <option value="" disabled selected>Selecciona un modelo</option>
                            </select>
                        </div>
                        <div class="form-group my-3">
                            <label for="veh_anio" class="form-label">AÃ±o:</label>
                            <input type="text" id="veh_anio" class="form-control" name="veh_anio" placeholder="Ej: 20XX">
                        </div>
                        <div class="form-group my-3">
                            <label for="veh_patente" class="form-label">Patente:</label>
                            <input type="text" id="veh_patente" class="form-control" name="veh_patente" placeholder="Ej: ABC-123">
                        </div>
                        <div class="form-group d-grid my-3">
                            <button class="btn btn-success">REGISTRAR</button>
                        </div>                        
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

