<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/autos/agregar" method="POST">
                        <div class="form-group">
                            <label for="veh_marca" class="form-label">Marca:</label>
                            <select id="veh_marca" class="form-control" name="veh_marca" onchange="">
