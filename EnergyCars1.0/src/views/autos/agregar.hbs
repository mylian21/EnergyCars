<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/autos/agregar" method="POST">


                        <div class="form-group my-3">
                            <label for="marc_nombre" class="form-label">Marca:</label>
                            <select id="marc_nombre" class="form-control" name="marc_nombre" required>
                                <option value="" disabled selected>Selecciona una marca</option>
                                {{#each marcas}}
                                <option value="{{ID_MARCA}}">{{MARC_NOMBRE}}</option>
                                {{/each}}
                            </select>
                        </div>

                        <div class="form-group my-3">
                            <label for="mod_nombre" class="form-label">Modelo:</label>
                            <select id="mod_nombre" class="form-control" name="mod_nombre">
                                <option value="" disabled selected>Selecciona un modelo</option>
                                {{#each modelos}}
                                <option value="{{ID_MODELO}}">{{MOD_NOMBRE}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group my-3">
                            <label for="anio" class="form-label">Año:</label>
                            <select type="text" id="anio" class="form-control" name="anio">
                                <option value="" disabled selected>Selecciona un año</option>
                                {{#each anio}}
                                <option value="{{ID_ANIO}}">{{ANIO}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group my-3">
                            <label for="veh_patente" class="form-label">Patente:</label>
                            <input type="text" id="veh_patente" class="form-control" name="veh_patente"
                                placeholder="Ej: ABC-123">
                        </div>
                        <div class="form-group d-grid my-3">
                            <button class="btn btn-success">REGISTAR</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('marc_nombre').addEventListener('change', async function () {
        const idMarca = this.value;

        if (idMarca) {
            try {
                const response = await fetch(`/autos/modelos/${idMarca}`);
                const modelos = await response.json();

                const selectModelos = document.getElementById('mod_nombre');
                selectModelos.innerHTML = '<option value="" disabled selected>Selecciona un modelo</option>'; // Limpiar el select

                modelos.forEach(modelo => {
                    const option = document.createElement('option');
                    option.value = modelos.ID_MODELO;
                    option.textContent = modelos.MOD_NOMBRE;
                    selectModelos.appendChild(option);
                });
            } catch (error) {
                console.error('Error al obtener modelos:', error);
            }
        }
    });
</script>

