<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/autos/agregar" method="POST">


                        <div class="form-group my-3">
                            <label for="marc_nombre" class="form-label">Marca:</label>
                            <select id="marc_nombre" class="form-control" name="veh_marca" required>
                                <option value="" disabled selected>Selecciona una marca</option>
                                {{#each marca_modelo}}
                                <option value="{{ID_MARCA}}">{{MARC_NOMBRE}}</option>
                                {{/each}}
                            </select>
                        </div>

                        <div class="form-group my-3">
                            <label for="mod_nombre" class="form-label">Modelo:</label>
                            <select id="mod_nombre" class="form-control" name="veh_modelo">
                                <option value="" disabled selected>Selecciona un modelo</option>
                                {{#each marca_modelo}}
                                <option value="{{ID_MODELO}}">{{MOD_NOMBRE}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group my-3">
                            <label for="veh_anio" class="form-label">Año:</label>
                            <select type="text" id="veh_anio" class="form-control" name="veh_anio">
                                <option value="" disabled selected>Selecciona un año</option>
                                {{#each anio}}
                                <option value="{{ID_ANIO}}">{{ANIO}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group my-3">
                            <label for="veh_patente" class="form-label">Patente:</label>
                            <input type="text" id="veh_patente" class="form-control" name="veh_patente"
                                placeholder="Ej: ABC-123">
                        </div>
                        <div class="form-group d-grid my-3">
                            <button class="btn btn-success">AGREGAR</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('marc_nombre').addEventListener('change', async function() {
        const marcaId = this.value;
        console.log("Hola" + marcaId);
        const modeloSelect = document.getElementById('mod_nombre');

        // Limpiar modelos anteriores
        modeloSelect.innerHTML = '<option value="" disabled selected>Selecciona un modelo</option>';

        if (marcaId) {
            try {
                const response = await fetch(`/autos/modelos/${marcaId}`);
                const modelos = await response.json();

                // Poblar los modelos en el select
                modelos.forEach(modelo => {
                    const option = document.createElement('option');
                    option.value = modelo.ID_MODELO;
                    option.textContent = modelo.MOD_NOMBRE;
                    modeloSelect.appendChild(option);
                });
            } catch (error) {
                console.error('Error al cargar los modelos:', error);
            }
        }
    });
</script>


