<div class="card p-4 fondoGradiente2">
    <h3 class="text-center colorGreen">Agrega nuevos vehículos eléctricos</h3>
    <div class="row">
        <div class="col-sm-3">
            <div class="card fondoGradiente2">
                <div class="card-body">
                    <!-- Formulario para agregar una nueva marca -->
                    <form action="/admin/vermarcas/marca" method="POST" style="text-align: center;">
                        <label for="marc_nombre" class="form-label letraBold">Ingresa la marca</label>
                        <input type="text" class="form-control" name="marc_nombre" placeholder="Nombre de marca" required>
                        <button class="btn btn-success m-1">Agregar</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="card fondoGradiente2">
                <div class="card-body">
                    <!-- Formulario para agregar un nuevo modelo -->
                    <form action="/admin/vermarcas/modelo" method="POST" style="text-align: center;">
                        <label for="mod_nombre" class="form-label letraBold">Ingresa el modelo</label>
                        <input type="text" class="form-control" name="mod_nombre" placeholder="Nombre del modelo" required>
                        <button class="btn btn-success m-1">Agregar</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="card fondoGradiente2">
                <div class="card-body">
                    <!-- Formulario para agregar un nuevo tipo de conector -->
                    <form action="/admin/vermarcas/conector" method="POST" style="text-align: center;">
                        <label for="tc_nombre" class="form-label letraBold">Tipo de conector</label>
                        <input type="text" class="form-control" name="tc_nombre" placeholder="Tipo de conector" required>
                        <button class="btn btn-success m-1">Agregar</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="card fondoGradiente2">
                <div class="card-body">
                    <!-- Formulario para agregar una nuevo año -->
                    <form action="/admin/vermarcas/anio" method="POST" style="text-align: center;">
                        <label for="n_anio" class="form-label letraBold">Elije el año</label>
                        <input type="number" class="form-control" name="n_anio" placeholder="Año" min="2005" max="2025" required>
                        <button class="btn btn-success m-1">Agregar</button>
                    </form> 
                </div>
            </div>
        </div>
    </div>
</div>
<div class="card p-4 fondoGradiente2">
    <h3 class="text-center colorGreen">Relaciona marcas, modelos y tipos de conector</h3>
    <div class="row">
        <div class="col-sm-4 mb-3 mb-sm-0">
            <div class="card fondoGradiente2">
                <div class="card-body">
                    <!-- Formulario para asociar una marca con un modelo y tipo de conector -->
                    <form action="/admin/vermarcas" method="POST">
                        <!-- Desplegable de Marcas -->
                        <div class="form-group my-3">
                            <label for="id_marca" class="form-label letraBold">Marca</label>
                            <select id="id_marca" class="form-control" name="id_marca" required>
                                <option value="" disabled selected>Selecciona una marca</option>
                                {{#each marcas}}
                                <option value="{{ID_MARCA}}">{{MARC_NOMBRE}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <!-- Desplegable de Modelos -->
                        <div class="form-group my-3">
                            <label for="id_modelo" class="form-label letraBold">Modelo:</label>
                            <select id="id_modelo" class="form-control" name="id_modelo" required>
                                <option value="" disabled selected>Selecciona un modelo</option>
                                {{#each modelos}}
                                <option value="{{ID_MODELO}}">{{MOD_NOMBRE}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <!-- Desplegable de Tipos de Conector -->
                        <div class="form-group my-3">
                            <label for="id_tc" class="form-label letraBold">Tipo de Conector:</label>
                            <select id="id_tc" class="form-control" name="id_tc" required>
                                <option value="" disabled selected>Selecciona un tipo de conector</option>
                                {{#each tipos_conectores}}
                                <option value="{{ID_TC}}">{{TC_NOMBRE}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group d-grid my-3">
                            <button class="btn btn-success">Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-sm-8">
            <div class="card fondoGradiente2">
                <div class="card-body">
                    <table class="table table-bordered table-header">
                        <h4 class="text-center colorGreen">Vehículos agregados</h4>
                        <thead>
                            <tr>
                                <th scope="col" class="fondoGradiente2">Marca</th>
                                <th scope="col" class="fondoGradiente2">Modelo</th>
                                <th scope="col" class="fondoGradiente2">Tipo conector</th>
                                <th scope="col" class="fondoGradiente2">Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each marca_modelo}}
                            <tr>
                                <td> {{MARC_NOMBRE}} </td>
                                <td> {{MOD_NOMBRE}} </td>
                                <td> {{TC_NOMBRE}} </td>
                                <td>
                                    <form action="/admin/vermarcas/eliminar" method="post" onclick="return confirm('¿Estás seguro de eliminar esta relacion?')">
                                        <input type="hidden" name="id_marca_modelo" value="{{ID_MARCA_MODELO}}">
                                        <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                                    </form>
                                    {{!-- <a href="/admin/eliminar/{{this.ID_MARCA_MODELO}}" class="btn btn-danger btn-sm"
                                        onclick="return confirm('¿Estás seguro de eliminar esta relacion?')">Eliminar</a> --}}
                                </td>
                            </tr>
                            {{/each}}
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
