<div class="row p-4">
    <div class="col-md-4 mx-auto">
        <div class="">
            <div class="card-body">
                <h3 class="card-title text-center colorGreen">Editar cuenta</h3>
                <form action="/auth/editarUser/{{editarUser.ID_USER}}" method="post">
                    <div class="form-group my-3">
                        <label for="nombre" class="form-label colorBlue">Nombre:</label>
                        <input type="text" value="{{editarUser.USER_NOMBRE}}" id="user_nombre" name="user_nombre"
                            class="form-control fondoGradiente3">
                    </div>
                    <div class="form-group my-3">
                        <label for="apellido" class="form-label colorBlue">Apellido:</label>
                        <input type="text" value="{{editarUser.USER_APELLIDO}}" id="user_apellido" name="user_apellido"
                            class="form-control fondoGradiente3">
                    </div>
                    <div class="form-group my-3">
                        <label for="correo" class="form-label colorBlue">Correo:</label>
                        <input type="email" value="{{editarUser.USER_CORREO}}" id="user_correo" name="user_correo" placeholder="Ingrese su correo"
                            class="form-control fondoGradiente3" disabled>
                    </div>
                    <div class="form-group my-3">
                        <label for="telefono" class="form-label colorBlue">Telefono:</label>
                        <input type="tel" value="{{editarUser.USER_TELEFONO}}" id="user_telefono" name="user_telefono" placeholder="11xxxxxxxx" class="form-control fondoGradiente3">
                    </div>
                    <div class="form-group my-3">
                        <label for="password" class="form-label colorBlue">Contraseña:</label>
                        <input type="password" value="{{editarUser.USER_CONTRASEINA}}" id="user_contrasenia" name="user_contrasenia" placeholder="Contraseña"
                            class="form-control fondoGradiente3">
                    </div>
                    <div class="form-group text-center">
                        <button class="btn btn-success btn-block">Editar</button>
                        <a href="/perfil" class="btn btn-danger my-2">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
