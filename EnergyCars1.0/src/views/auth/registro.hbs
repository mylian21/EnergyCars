<div class="row p-4">
    <div class="col-md-4 mx-auto">
        <div class="">
            <div class="card-body">
                <h3 class="card-title text-center">Crea una cuenta</h3>
                <form action="/registro" method="post">
                    <div class="form-group my-3">
                        <label for="nombre" class="form-label">Nombre:</label>
                        <input type="text" id="user_nombre" name="user_nombre" placeholder="Ingrese su nombre"
                            class="form-control" autofocus>
                    </div>
                    <div class="form-group my-3">
                        <label for="apellido" class="form-label">Apellido:</label>
                        <input type="text" id="user_apellido" name="user_apellido" placeholder="Ingrese su apellido"
                            class="form-control">
                    </div>
                    <div class="form-group my-3">
                        <label for="correo" class="form-label">Correo:</label>
                        <input type="email" id="user_correo" name="user_correo" placeholder="Ingrese su correo"
                            class="form-control">
                    </div>
                    <div class="form-group my-3">
                        <label for="telefono" class="form-label">Telefono:</label>
                        <input type="tel" id="user_telefono" name="user_telefono" placeholder="11xxxxxxxx" class="form-control">
                    </div>
                    <div class="form-group my-3">
                        <label for="password" class="form-label">Contraseña:</label>
                        <input type="password" id="user_contrasenia" name="user_contrasenia" placeholder="Contraseña"
                            class="form-control">
                    </div>
                    <div class="form-group text-center">
                        <button class="btn btn-success btn-block">REGISTRARSE</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>