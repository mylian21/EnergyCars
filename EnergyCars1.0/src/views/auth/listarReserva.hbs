<div class="container p-4">
    <div class="row">

        {{#each reservas}}
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="card-title text-uppercase">
                            {{ESTC_NOMBRE}}
                        </h3>
                            <p>{{ESTC_DIRECCION}} - {{ESTC_LOCALIDAD}} </p>
                        <h6 class="card-subtitle mb-2 text-body-secondary">
                            Fecha: {{RESERVA_FECHA}}
                        </h6>
                        <h6 class="card-subtitle mb-2 text-body-secondary">
                            Tiempo de carga: {{RESERVA_HORA_INI}} - {{RESERVA_HORA_FIN}}
                        </h6>
                        <p class="card-text">
                            Precio: {{RESERVA_IMPORTE}}
                        </p>
                        <a href="/auth/cancelar/{{ID_RESERVA}}" class="btn btn-danger">CANCELAR</a> {{!-- Fecha min 1:25 --}}
                    </div>
                </div>
            </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No hay reservas.</p>
                    <a href="/auth/reserva">Agrega una.</a>
                </div>
            </div>
        {{/each}}

    </div>
</div>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listado de Reservas</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
        tr:nth-child(even) {
            background-color: #f9f9f9;
        }
        tr:hover {
            background-color: #f1f1f1;
        }
    </style>
</head>
<body>
    <h1>Listado de Reservas</h1>
    {{#if reservas.length}}
    <table>
        <thead>
            <tr>
                <th>Fecha</th>
                <th>Hora Inicio</th>
                <th>Hora Fin</th>
                <th>Importe</th>
                <th>Estación</th>
                <th>Dirección</th>
                <th>Localidad</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody>
            {{#each reservas}}
            <tr>
                <td>{{this.RESERVA_FECHA}}</td>
                <td>{{this.RESERVA_HORA_INI}}</td>
                <td>{{this.RESERVA_HORA_FIN}}</td>
                <td>{{this.RESERVA_IMPORTE}}</td>
                <td>{{this.ESTC_NOMBRE}}</td>
                <td>{{this.ESTC_DIRECCION}}</td>
                <td>{{this.ESTC_LOCALIDAD}}</td>
                <td>{{this.EST_RES_DESCRIP}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{else}}
    <p>No se encontraron reservas registradas.</p>
    {{/if}}
</body>
</html>

